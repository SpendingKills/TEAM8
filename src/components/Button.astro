---
const { variant = "primary" } = Astro.props;
---

<button class={variant}>
  {(<slot />)}
</button>

<style>
  button {
    background-color: transparent;
    border-radius: 10px;
    padding: 12px 20px;
    cursor: pointer;
  }

  .primary {
    background-color: #e21e27;
    color: white;
    border-radius: 50px;
    cursor: pointer;
    padding: 10px 30px;
    border: #e21e27;
  }

  .secondary {
    /* background-color: white;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    cursor: pointer;
    border: white; */
     background-color: white;
    border-radius: 50%;
    
    cursor: pointer;
    border: white;
    display: inline-flex;
    align-items: center;
    justify-content: center;
  
  }

  .tertiary {
    background-color: #ebebeb;
    border-radius: 50%;
    cursor: pointer;
    border: #ebebeb;
    padding: 7px;
    display: inline-flex;
    margin-left: 5px;
    align-items: center;
    justify-content: center;
  }
</style>
